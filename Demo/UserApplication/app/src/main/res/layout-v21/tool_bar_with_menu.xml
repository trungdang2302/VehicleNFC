<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_min_height"
    android:background="@drawable/toolbar_default"
    android:padding="10dp"
    android:minHeight="50dp">
    <TextView
        android:id="@+id/lbl_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/parkingwithnfc"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_transparent"
    android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
    android:onClick="popUpMenu"
    />
</Toolbar>