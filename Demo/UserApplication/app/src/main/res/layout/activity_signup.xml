<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <include layout="@layout/tool_bar" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2">

            <EditText
                android:id="@+id/txtFirstname"
                android:layout_width="0dp"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.8"
                android:background="@color/colorPrimaryEditText"
                android:hint="Họ"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtLastname"
                android:layout_width="0dp"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginRight="30dp"
                android:layout_weight="1.2"
                android:background="@color/colorPrimaryEditText"
                android:hint="Tên"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="3">

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:background="@color/colorPrimaryEditText"
                android:hint="Số điện thoại"
                android:inputType="textPhonetic"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="3">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:background="@color/colorPrimaryEditText"
                android:fontFamily="sans-serif"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="3">

            <EditText
                android:id="@+id/txtVehicalID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:background="@color/colorPrimaryEditText"
                android:hint="Biển số xe (XXAX-XXX.XX)"
                android:inputType="textCapCharacters"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="3">

            <EditText
                android:id="@+id/txtVehicalLicenceId"
                android:layout_width="@dimen/txt_nor_width"
                android:layout_height="@dimen/txt_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="3"
                android:background="@color/colorPrimaryEditText"
                android:hint="Số tem giấy chứng nhận"
                android:inputType="textCapCharacters"
                android:paddingLeft="15dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <Button
                android:layout_width="@dimen/btn_nor_width"
                android:layout_height="@dimen/btn_nor_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_normal"
                android:onClick="signUpUser"
                android:text="Đăng ký"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </TableRow>

