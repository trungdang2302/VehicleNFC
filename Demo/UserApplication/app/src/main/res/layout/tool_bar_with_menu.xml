<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_min_height"
    android:background="@drawable/toolbar_default"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:id="@+id/toolbar"
    android:padding="10dp"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/btn_transparent"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:onClick="popUpMenu" />

    <TextView
        android:id="@+id/lbl_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".9"
        android:gravity="center"
        android:text="@string/parkingwithnfc"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

</LinearLayout>